{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "typeRoots" : ["./node_modules/@types"],
    "moduleResolution": "node"
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}