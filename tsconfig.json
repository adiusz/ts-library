{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "lib": [
      "es6",
      "dom"
    ],
    "allowJs": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "types": [
      "node"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "@types"
    ],
    "moduleResolution": "NodeNext"
  },
  "include": [
    "src",
    "@types/reset.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*"
  ]
}
